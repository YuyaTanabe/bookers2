<div class='body'>
    <div class='container'>

        <p id="notice"><%= flash.notice %></p>

        <div class='row'>

<!-- 左上 -->
<div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %></tr> 
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>

    <div class='row'>
      <% if @user.id == current_user.id %>
        <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      <% else %>
        <%= link_to "", user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      <% end %>
    </div>

<!-- 左下 -->
<%= render 'books/post', new_book: @new_book %>

  </div>

<!-- 右 -->
<div class='col-xs-9'>
<h2>Books</h2>

  <table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"  %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>





