<div class='body'>
    <div class='container'>

        <p id="notice"><%= flash.notice %></p>

        <div class='row'>

<!-- 左上 -->
<div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %></tr> 
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </table>

    <div class='row'>
      <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

<!-- 左下 -->
<%= render 'books/post', new_book: @new_book %>

  </div>

<!-- 右 -->
<div class='col-xs-9'>
<h2>Books</h2>

  <table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><a href="/users/8">
          <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" alt="No image icon" />
</a>        </td>
        <td><%= link_to "book.title", book_path(book.id), class:"book_#{book.id}" %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>