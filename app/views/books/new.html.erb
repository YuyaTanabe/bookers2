<div class='body'>
    <div class='container'>

        <p id="notice"><%= flash.notice %></p>

      	<div class='row'>

        <div class='col-xs-3'>


<h2>New book</h2>

  <%= form_for(@book) do |f| %>



  <div class="field row">
    <%= f.label :title %>
    <%= f.text_field :title, class:"col-xs-12 book_title" %>
  </div>

  <div class="field row">
    <%= f.label :opinion %>
    <%= f.text_area :opinion, class:"col-xs-12 book_body" %>
  </div>

  <div class="actions row">
  	<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
  </div>
  <% end %>

         </div>

         <div class='col-xs-9'>
         </div>

        </div>
    </div>
</div>


