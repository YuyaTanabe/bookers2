<div class='body'>
    <div class='container'>

        <p id="notice"><%= flash.notice %></p>

        <div class='row'>

<!-- 左上 -->
<div class='col-xs-3'>
<%= render 'users/profile' %>

<!-- 左下 -->
<%= render 'post', new_book: @new_book %>

  </div>


<!-- 右　投稿一覧 -->
<div class='col-xs-9'>
<h2>Books</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"  %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.opinion %></td>
      </tr>
  <% end %>
  </tbody>
</table>

</div>

</div>

</div>
</div>




